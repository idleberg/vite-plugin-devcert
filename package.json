{
	"name": "@idleberg/vite-plugin-devcert",
	"version": "0.3.2",
	"description": "A Vite plugin to generate trusted SSL/TLS certificates for local development",
	"license": "MIT",
	"author": "Jan T. Sott",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/idleberg/vite-plugin-devcert.git"
	},
	"keywords": [
		"vite-plugin",
		"certificate",
		"https",
		"ssl",
		"tls"
	],
	"type": "module",
	"exports": {
		"types": "./dist/plugin.d.ts",
		"import": "./dist/plugin.js"
	},
	"types": "./dist/plugin.d.ts",
	"engines": {
		"node": "^20.19.0 || >=22.12.0"
	},
	"files": [
		"dist/",
		"LICENSE",
		"README.md"
	],
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"lint": "biome check",
		"prepack": "npm run build",
		"prepare": "lefthook install",
		"publish:jsr": "deno publish",
		"publish:npm": "np --any-branch",
		"server": "concurrently -n 'e2e,unit' -c 'blue,green' 'npm:server:*'",
		"server:http": "vite --config e2e/vite.config-http.ts",
		"server:https": "vite --config e2e/vite.config-https.ts",
		"test": "concurrently -n 'server,client' -c 'blue,green' 'npm:test:*'",
		"test:e2e": "playwright test",
		"test:unit": "vitest run --exclude e2e"
	},
	"dependencies": {
		"boxen": "^8.0.1",
		"kleur": "^4.1.5",
		"log-symbols": "^7.0.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@idleberg/configs": "^0.2.0",
		"@playwright/test": "^1.55.0",
		"@types/node": "^24.4.0",
		"concurrently": "^9.2.1",
		"lefthook": "^1.13.0",
		"np": "^10.2.0",
		"tsdown": "^0.15.1",
		"typescript": "^5.9.2",
		"vite": "^7.1.5",
		"vitest": "^3.2.4"
	},
	"peerDependencies": {
		"@expo/devcert": "^1.2.0",
		"vite": "^5.0.0 || ^6.0.0 || >=7.0.0"
	},
	"packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977"
}
